/**index.wxss**/
.box{
  padding: 20rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.box2{
   padding: 20rpx;
   margin-top: 20rpx;
}
.word{
  flex: 1;
  font-size: 32rpx;
  display: block;
  white-space: nowrap;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
.shoWords{
  font-size: 32rpx!important;
}
.show{
  width: 80rpx;
  font-size: 34rpx;
  color: red;
}
.box3{
    width: 100%;
    display: flex;
    flex-direction: column;
}
.tab{
    display: flex;
    width: 100%;
}
.tab-item{
    flex: 1;
    font-size: 32rpx;
    padding: 10rpx 0;
    border-left: 1rpx solid #d1d1d1;
    text-align: center;
}
.tab-item:nth-child(1){
    border-left: none
}
.active{
    border-bottom: 6rpx solid red;
}
.mune{
    width: 100%;
}
.scroll{
    width: 400%;
    display: flex;
}
.scroll view{
    flex: 1
}
.box4{
    width: 100%;
    margin: 30rpx 0;
    position: relative;
    transition: left 200ms;
}

.showText{
    width: 100%;
    display: flex;
}
.showText > view{
    flex: 1;
    margin: 0 10rpx;
}
.showText image{
    width: 100%;
}
.delete{
    width: 150rpx;
    height: 100%;
    background: red;
    text-align: center;
    line-height: 100%;
    font-size: 35rpx;
    color: #fff;
    position: absolute;
    top: 0;
    right: -150rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}